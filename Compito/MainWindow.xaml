            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="75"></RowDefinition>

            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="75"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="205"></ColumnDefinition>
            <ColumnDefinition Width="205"></ColumnDefinition>
            <ColumnDefinition Width="205"></ColumnDefinition>
            <ColumnDefinition Width="205"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="4" Grid.RowSpan="1">
            <Label Content="Music Service 4ai"  VerticalContentAlignment="Center" Height="100" HorizontalContentAlignment="Center" FontSize="36" Background="Black" Foreground="White"></Label>

        </StackPanel>
        <Button Content="Rimuovi Slezione" Grid.Column="2" Grid.Row="6" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="150" FontSize="14"></Button>
