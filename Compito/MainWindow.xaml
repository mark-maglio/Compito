        <Button Content="Pulisci" Grid.Column="0" Grid.Row="9" Height="20" Width="130" VerticalAlignment="Center"></Button>
        <Button Content="Esci" Grid.Column="0" Grid.Row="9" Height="20" Width="130" VerticalAlignment="Bottom"></Button>
        <Label Content="Se non presente inserisci qui-->" Grid.Column="2" Grid.Row="1" Width="180" Height="25"></Label>
        <TextBlock Grid.Row="3" Grid.Column="3" Width="195"></TextBlock>
        <TextBlock Grid.Row="4" Grid.Column="3" Width="195"></TextBlock>
        <TextBlock Grid.Row="5" Grid.Column="3" Width="195"></TextBlock>
        <TextBlock Grid.Row="6" Grid.Column="3" Width="195"></TextBlock>
        <TextBlock Grid.Row="7" Grid.Column="3" Width="195"></TextBlock>
        <Label Content="Totale iva esclusa 0" Grid.Row="9" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
    </Grid> 
</Window>
