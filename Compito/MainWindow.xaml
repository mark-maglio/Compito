        <Button Content="Rimuovi Slezione" Grid.Column="2" Grid.Row="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="150" FontSize="14"></Button>
        <Button Content="Rimuovi Slezione" Grid.Column="2" Grid.Row="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="150" FontSize="14"></Button>
        <Button Content="Rimuovi Slezione" Grid.Column="2" Grid.Row="7" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="150" FontSize="14"></Button>
        <Button Content="Calcola" Grid.Column="2" Grid.Row="9" VerticalAlignment="Top" HorizontalContentAlignment="Center" Height="25" Width="150" FontSize="14"></Button>
        <Button Content="Inserisci" Grid.Column="4" Grid.Row="2" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" Height="25" Width="150" FontSize="14"></Button>
        <Label Content="NOME" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Grid.Row="2" Width="45" Margin="10" Height="25"></Label>
        <Label Content="COGNOME" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Column="2" Grid.Row="2" Width="70" Margin="10" Height="25"></Label>
        <TextBlock Text="" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="2" Grid.Row="2" Width="95" Margin="10" Height="25" Background="#FFF0F0F0" Foreground="White"/>
        <TextBlock Text="" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="2" Grid.Row="2" Width="95" Margin="10" Height="25" Background="#FFF0F0F0" Foreground="White"></TextBlock>
        <Label Content="Preventivo del" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="0" Grid.Row="1"></Label>
        <TextBlock Text="30/01/2021" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1"></TextBlock>
        <Label Content="Esterno Palco" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="3"></Label>
        <Label Content="Interno Palco" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="4"></Label>
        <Label Content="Parco Luci" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="5"></Label>
        <Label Content="Interno Palco" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="4"></Label>
        <Label Content="Strutture/Hardware " HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="6"></Label>
        <Label Content="Categorie Tecniche" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="7"></Label>
        <ComboBox Grid.Column="1" Grid.Row="1" Margin="10" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150"></ComboBox>
        <ComboBox Grid.Column="1" Grid.Row="3" Margin="10" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150"></ComboBox>
        <ComboBox Grid.Column="1" Grid.Row="7" Margin="10" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150"></ComboBox>
        <ComboBox Grid.Column="1" Grid.Row="6" Margin="10" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150"></ComboBox>
        <ComboBox Grid.Column="1" Grid.Row="5" Margin="10" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150"></ComboBox>
        <ComboBox Grid.Column="1" Grid.Row="4" Margin="10" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150"></ComboBox>
